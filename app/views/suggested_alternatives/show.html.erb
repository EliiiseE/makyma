<%= render 'header',
            title: @suggested_alternative,
            text: 'Si tu es administrateur de Makyma, tu peux voir ici une alternative suggérée 👀',
            large: '+++' %>

<div class="container">
  <!--<div class="row mb-5 offset-md-2">
    <div class="col-md-12">
      <p id="notice" class="text-secondary"><%= notice %></p>
    </div>
  </div>-->
  <div class="row justify-content-center align-items-center alternative-container mb-5 mt-5">
    <div class="d-flex justify-content-center align-items-center flex-column-reverse flex-md-row">
      <div class="col-md-6 text-container mb-5 mb-md-5 mb-lg-0 mt-0 mt-md-5 mt-lg-0">
        <div class="header-alternative row justify-content-between align-items-center mb-3">
          <h3 class="text-primary mb-0"><%= @suggested_alternative.title %></h3>
          <p class="filter text-primary mb-0">
          <% if @suggested_alternative.alternative_type_filter.to_s == 'En ligne' %>
            <span>🛒</span>
          <% end %>
          <% if @suggested_alternative.alternative_type_filter.to_s == 'DIY' %>
            <span>✂️</span>
          <% end %>
          <% if @suggested_alternative.alternative_type_filter.to_s == 'Local' %>
            <span>🚲</span>
          <% end %>
          <%= @suggested_alternative.alternative_type_filter %>
          </p>
        </div>
        <p class="text-secondary mb-4"><%= @suggested_alternative.description %></p>
        <h3 class="text-primary mb-3">Où trouver ?</h3>
        <p class="text-secondary mb-4"><%= @suggested_alternative.find %></p>

        <a href="<%= @suggested_alternative.source %>" target="_blank" class="button text-info border-info border rounded pt-2 pb-2 pl-3 pr-3 shadow-sm">Je visite le site !</a>
        <% if can? :manage, @suggested_alternative %>
          <%= link_to "✏️", edit_suggested_alternative_path(@suggested_alternative), class: 'button admin text-info border-info border rounded pt-2 pb-2 pl-2 pr-2 shadow-sm ml-2' %>
          <%= link_to "❌", @suggested_alternative, method: :delete, data: { confirm: 'En es-tu sûr ?' }, class: 'button admin text-info border-info border rounded pt-2 pb-2 pl-2 pr-2 shadow-sm ml-1' %>
        <% end %>
      </div>
      <div class="col-md-6">
        <div class="d-flex justify-content-center align-items-center mb-4 mb-md-5 mt-5">
          <img class="img-fluid rounded w-100" src="<%= @suggested_alternative.imgUrl %>" alt="Image correspondant à l'aternative <%= @suggested_alternative.title %>">
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-around mb-5 mt-5">
    <%= link_to "Ajouter l'alternative au site ➕", add_to_alternatives_suggested_alternative_path(@suggested_alternative), method: :put, class: 'button admin text-info border-info border rounded pt-2 pb-2 pl-3 pr-3 shadow-sm mb-3' %>
  </div>
</div>

