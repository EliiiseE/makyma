<%= render 'header',
            title: @category.title,
            text: @category.description,
            count: @category.alternatives.count %>

<div class="container category__products">
  <div class="row">
    <div class='filter'>
      <p>Filtrer :</p>
        <label for="local">🚲 Local</label>
        <input type="checkbox" id="local" name="local"checked>
          <%=image_tag asset_path('separation.svg')%>
        <label for="DIY">✂️ DIY</label>
        <input type="checkbox" id="DIY" name="DIY"checked>
          <%=image_tag asset_path('separation.svg')%>
        <label for="onligne">🛒 En Ligne</label>
        <input type="checkbox" id="onligne" name="onligne"checked>
    </div>
    <div class="result">
      <p>33 résultats</p>
    </div>
    <div class="col-md-8 offset-md-2">
      <% @category.products.each do |product| %>

        <div class="product">
          <div class="product-text">
            <h4><a href="<%= product_url(product) %>"><%= product %></a></h4>
            <p class="alternatives-count"><%= product.alternatives.count %> solution<%= "s" if product.alternatives.count > 1 %> alternative<%= "s" if product.alternatives.count > 1 %></p>
          </div>
          <a class="btn mt-2 mb-2" href="<%= product_url(product) %>">Je change</a>
        </div>
      <% end %>
    </div>
    <div class='btn_see_more'>
      <a href=''>Voir Plus</a>
    </div>
  </div>
</div>

<% if can? :manage, @category %>
  <div class="container">
    <div class="row justify-content-around my-5">
      <button type="button" class="col-lg-2 btn btn-outline-primary" style="border-radius: 35px;"><%= link_to 'Nouveau produit', new_product_path %></button>
      <button type="button" class="col-lg-2 btn btn-outline-primary" style="border-radius: 35px;"><%= link_to 'Modifier', edit_category_path(@category) %></button>
      <%# <!-- <button type="button" class="col-lg-2 btn btn-outline-primary" style="border-radius: 35px;"><%= link_to 'Retour', categories_path %>
    </div>
  </div>
<% end %>
