<div class="container d-flex flex-row flex-wrap justify-content-center" style="max-width: 1000px;">
  <% @category.products.each do |product| %>
		<div class="card shadow m-4" style="border:none; border-radius: 13px; width: 200px; height: 215px;">
      <img class="card-img-top" src="" alt="Card image cap"><%= @category.image %></img>
      <div class="card-body d-flex align-items-end justify-content-center">
        <h3 class="card-title" style="font-size: 20px"><%= link_to product, product %></h3>
      </div>
    </div>
	<% end %>
</div>


<div class="row justify-content-center mt-5">
