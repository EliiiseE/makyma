<svg width="0" height="0"  viewBox="0 0 1 1" preserveAspectRatio="none" class="my-0" style="position:absolute; pointer-events: none;">
  <defs>
    <clipPath id="myClip" clipPathUnits="objectBoundingBox">
        <path  d="M0,0v0.9c0,0,0.2,0.1,0.5,0S1,1,1,1V0H0z"/>
    </clipPath>
        <clipPath id="myClipFooter" clipPathUnits="objectBoundingBox">
        <path  d="M0,0v0.9c0,0,0.2,0.1,0.5,0S1,1,1,1V0H0z"/>
    </clipPath>
  </defs>
</svg>


<header class="position-relative" style="top:-48px;">
  <div class="container">
    <div class="jumbotron bg-transparent">
      <div class="row">
        <div class="col-12 col-md-8 col-lg-6">
          <span><%= @category %></span>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <p><%= @category.description %></p>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col shadow">
      <% @category.products.each do |product| %>
      <div class="row justify-content-center my-4">
        <div class="col-6 col-md-5 text-left">
          <h1><%= link_to product, product, style:'color:#707070; text-decoration: none' %></h1>
        </div>
        <div class="col-6 col-md-5 text-right">
          <%= link_to 'Je change', product, style:'color:#707070; text-decoration: none'%>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


<div class="container">
  <div class="row justify-content-around my-5">
    <% if can? :manage, @category %>
      <button type="button" class="col-lg-2 btn btn-outline-primary" style="border-radius: 35px;"><%= link_to 'Nouveau produit', new_product_path %></button>
      <button type="button" class="col-lg-2 btn btn-outline-primary" style="border-radius: 35px;"><%= link_to 'Modifier', edit_category_path(@category) %></button>
    <% end %>
      <%# <!-- <button type="button" class="col-lg-2 btn btn-outline-primary" style="border-radius: 35px;"><%= link_to 'Retour', categories_path %>
  </div>
</div>
