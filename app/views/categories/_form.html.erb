<div class="container mb-5 form-container">
  <div class="row mt-4">
		<div class="col">
      <%= simple_form_for @category do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-row align-items-start justify-content-between">
          <%= f.input :title, as: :string, label: "Titre", placeholder: 'Cuisine', label_html: { class: 'text-secondary ml-4' }, required: true, wrapper_html: { class: 'col-md-6' }, error: 'Ce champ est requis ✏️' , :input_html => { class: 'input-form px-3 py-3' }, autofocus: true %>
          <%= f.input :image, as: :string, label: "Image", placeholder: "Nom de l'image dans le dossier images", label_html: { class: 'text-secondary ml-4' }, required: true, wrapper_html: { class: 'col-md-6' }, error: 'Ce champ est requis ✏️' , :input_html => { class: 'input-form px-3 py-3' } %>
        </div>
        <%= f.input :description, as: :text, :input_html => { :rows => 4, class: 'input-form px-3 py-2' }, label: "Description", placeholder: 'Écris la description de la catégorie', label_html: { class: 'text-secondary ml-4' }, required: true, error: 'Ce champ est requis ✏️' %>

        <%= f.button :submit, 'Envoyer', class: 'button text-light bg-info border-info border rounded pt-2 pb-2 pl-4 pr-4 shadow-sm mt-2' %>

      <% end %>
		</div>
  </div>
</div>