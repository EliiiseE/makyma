				<%= f.input :imgUrl, as: :url, label: "L'url d'une image de ton alternative", label_html: { class: 'text-secondary ml-4' }, wrapper_html: { class: 'col-md-6' } %>
			</div>

			<%= f.button :submit, 'Envoyer', class: 'button text-light bg-info border-info border rounded pt-2 pb-2 pl-4 pr-4 shadow-sm' %>
		<% end %>
		</div>
  </div>
</div>