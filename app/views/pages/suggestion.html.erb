			<div class="form-row align-items-end justify-content-between">
				<%= f.association :product, as: :select, label: 'Produit', label_html: { class: 'text-secondary ml-4' }, required: true, wrapper_html: { class: 'col-md-6' } %>
				<%= f.association :alternative_type_filter, as: :select, label: "De quel type d'alternative s'agit-il", label_html: { class: 'text-secondary ml-4' }, required: true, wrapper_html: { class: 'col-md-6' } %>
			</div>
				<%= f.input :title, as: :string, label: "Nom de l'alternative", label_html: { class: 'text-secondary ml-4' }, required: true %>
				<%= f.input :description, as: :text, :input_html => { :rows => 5 }, label: "Description de ton alternative", label_html: { class: 'text-secondary ml-4' } %>
				<%= f.input :find, as: :text, :input_html => { :rows => 5 }, label: "O√π peut-on trouver ton alternative", label_html: { class: 'text-secondary ml-4' } %>
