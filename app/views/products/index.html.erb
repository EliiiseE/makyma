<%# <p id="notice"><%= notice %>

<svg width="0" height="0"  viewBox="0 0 1 1" preserveAspectRatio="none" class="my-0" style="position:absolute; pointer-events: none;" >
  <defs>
    <clipPath id="myClip" clipPathUnits="objectBoundingBox">
        <path  d="M0,0v0.9c0,0,0.2,0.1,0.5,0S1,1,1,1V0H0z"/>
    </clipPath>
        <clipPath id="myClipFooter" clipPathUnits="objectBoundingBox">
        <path  d="M1,1V0c0,0-0.2,0.1-0.5,0S0,0.1,0,0.1V1H1z"/>
    </clipPath>
  </defs>
</svg>

<header class="position-relative" style="top:-48px;">
  <div class="container">
    <div class="jumbotron bg-transparent">
      <div class="row">
        <div class="col-12 col-md-8 col-lg-6">
          <span>Produits</span>
        </div>
      </div>
    </div>
  </div>
</header>


<div class="container mb-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8 col-xl-7 shadow" style="border-radius:13px">
      <% @products.each do |product| %>
      <div class="row my-4 mx-1">
        <div class="col">
          <h1 class="text-secondary"><%= product.title %></h1>
          <%= link_to 'Je change', product, class:'', style:'color:#707070; text-decoration: none'%>
        </div>
        <div class="text-right">
          <% if can? :manage, @product %>
            <%= link_to 'Edit', edit_product_path(product) %>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <% if can? :manage, @product %>
        <%= link_to 'New Product', new_product_path %>
      <% end %>
    </div>
  </div>
</div>
