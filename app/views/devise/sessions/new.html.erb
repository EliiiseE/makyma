<svg width="0" height="0"  viewBox="0 0 1 1" preserveAspectRatio="none" class="my-0" style="position:absolute; pointer-events: none;" >
  <defs>
    <clipPath id="myClip" clipPathUnits="objectBoundingBox">
        <path  d="M0,0v0.9c0,0,0.2,0.1,0.5,0S1,1,1,1V0H0z"/>
    </clipPath>
        <clipPath id="myClipFooter" clipPathUnits="objectBoundingBox">
        <path  d="M1,1V0c0,0-0.2,0.1-0.5,0S0,0.1,0,0.1V1H1z"/>
    </clipPath>
  </defs>
</svg>

<header class="position-relative" style="top:-48px;">
  <div class="container">
    <div class="jumbotron bg-transparent">
      <div class="row">
        <div class="col-12 col-md-8 col-lg-6">
          <span>Se connecter</span>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container pb-5">
  <div class="row justify-content-center">
    <div class="col-11 col-lg-10">
      <div class="form-group">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <h1 class="text-secondary">Email</h1>
            <%= f.input :email,
                        required: false,
                        label:false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <h1 class="text-secondary">Mot de passe</h1>
            <%= f.input :password,
                        required: false,
                        label:false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Se connecter", class:'text-secondary ', style:'border: 1px solid #707070;' %>
          </div>
        <% end %>

         <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
