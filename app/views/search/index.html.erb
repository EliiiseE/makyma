<%= render 'header',
            title: "Résultats",
            text: "Voici les résultats pour ta recherche #{@search}",
            count: @nbOfResults %>

<div class="container search">
	<% if @results.present? %>
		<% if @results['products'].present? %>
			<h4>Produits</h4>
			<ul>
				<% @results['products'].each do |product| %>
				
					<div class="product">
						<div class="product-text">
							<h4><a href="<%= product_url(product) %>"><%= product %></a></h4>
							<p class="alternatives-count"><%= product.alternatives.count %> solution<%= "s" if product.alternatives.count > 1 %> alternative<%= "s" if product.alternatives.count > 1 %></p>
						</div>
						<a class="btn mt-2 mb-2" href="<%= product_url(product) %>">Je change</a>
					</div>

					<%# <li>
						<%= link_to product, product
					</li> %>
				<% end %>
			</ul>
		<% end %>

		<% if @results['alternatives'].present? %>
			<h4>Alternatives</h4>
			<ul>
				<% @results['alternatives'].each do |alternative| %>
					<div class="product">
						<div class="product-text">
							<h4><a href="<%= alternative.source %>"><%= alternative %></a></h4>
						</div>
						<a class="btn mt-2 mb-2" href="<%= alternative.source %>">Je change</a>
					</div>
				<% end %>
			</ul>
		<% end %>

		<% if @results['suggestions'].present? %>
			<h4>Suggestions</h4>
			<ul>
				<% @results['suggestions'].each do |suggestion| %>
					<div class="product">
						<div class="product-text">
							<h4><a href="<%= product_url(suggestion) %>"><%= suggestion %></a></h4>
							<p class="alternatives-count"><%= suggestion.alternatives.count %> solution<%= "s" if suggestion.alternatives.count > 1 %> alternative<%= "s" if suggestion.alternatives.count > 1 %></p>
						</div>
						<a class="btn mt-2 mb-2" href="<%= product_url(suggestion) %>">Je change</a>
					</div>
				<% end %>
			</ul>
		<% end %>
	<% end %>
</div>